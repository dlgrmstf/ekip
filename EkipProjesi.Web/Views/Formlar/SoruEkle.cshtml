@model EkipProjesi.Core.Formlar.AnketSoruBankasiDTO
@{
    ViewBag.Title = "SoruEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12  align-self-center">
        <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
            <div class="w-sm-100 mr-auto"><h4 class="mb-0">Soru Ekle</h4> <a href="@Url.Action("Index", "Formlar")"><p>Formlar</p></a></div>
            <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                <li class="breadcrumb-item"><a href="#">Soru Ekle</a></li>
                <li class="breadcrumb-item active">Anasayfa</li>
            </ol>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 mt-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Soru Bilgileri</h5>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            @using (Html.BeginForm("SoruEkle", "Formlar", FormMethod.Post, new { @class = "popup-validation" }))
                            {
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>Soru</label>
                                        <textarea name="Soru" class="form-control" required type="text" value="@Model.Soru" cols="3"></textarea>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label>Soru Kodu</label>
                                        <input name="SoruKodu" class="form-control" required type="text" value="@Model.SoruKodu"/>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label>Açıklama</label>
                                        <textarea name="Aciklama" class="form-control" required type="text" value="@Model.Aciklama" cols="3"></textarea>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="Status" class="col-sm-3 control-label">Durum</label>
                                        <div class="col-sm-6">
                                            <select name="@Html.NameFor(x=>x.Status)" id="@Html.IdFor(x=>x.Status)" class="form-control" required>
                                                <option value="True">Aktif</option>
                                                <option value="False">Pasif</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-2">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    if ('@ViewBag.Msg' != "") {
        alert("@Html.Encode(ViewBag.Msg)");
    }
</script>