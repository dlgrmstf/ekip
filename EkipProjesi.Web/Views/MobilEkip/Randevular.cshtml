                                }
                                @if (User.IsInRole("92"))
                                {
                                    <tbody>
                                        @foreach (var t in ViewBag.AktifRandevuTalepleri)
                                        {
                                            if (t.KayitTarihi.AddDays(4) <= DateTime.Now)
                                            {
