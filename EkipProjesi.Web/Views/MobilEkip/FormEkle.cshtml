<script>
    $(document).ready(function () {
        $("#form input[type='checkbox']").on("click", function () {
            if ($(this).prop('checked')) {
                $(this).attr('value', true);
            } else {
                $(this).attr('value', false);
            }
        });
        $("#kaydet").on("click", function () {
            beforeCallHasta();
        });
        function beforeCallHasta(form, options) {
          var HastaID = @Html.Raw(JsonConvert.SerializeObject(ViewBag.HastaID));
          var form = $('#form')[0];
          var dataString = new FormData(form);
            jQuery.ajax({
                cache: false,
                type: "POST",
                url: '@Url.Action("VakaFormEkle", "MobilEkip")?HastaID=' + HastaID,
                enctype: 'multipart/form-data',
                data: dataString,
                processData: false,
                contentType: false,
                success: function (data) {
                    window.location = '@Url.Action("VakaDetay", "MobilEkip")?HastaID=' + HastaID;
                }
          });
        }
    });
</script>