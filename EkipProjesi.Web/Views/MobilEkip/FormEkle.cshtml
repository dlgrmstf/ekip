                $("#topluortamdetay").hide();
                $("#ikametdigerdetay").show();
            }
            else {
                $("#topluortamdetay").hide();
                $("#ikametdigerdetay").hide();
            }
        });
        $('#@Html.IdFor(x=>x.AdliDurumu)').on('change', function () {
            if (this.value == "5") {
                $("#adlidurumdiger").show();
            }
            else {
                $("#adlidurumdiger").hide();
            }
        });
    });
