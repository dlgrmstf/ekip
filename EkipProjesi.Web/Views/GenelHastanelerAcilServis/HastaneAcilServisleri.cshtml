@model List<EkipProjesi.Core.AcilServis.IAcilServisVakaBilgileri>
@{
    ViewBag.Title = "Hastane Acil Servisleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/dist/vendors/datatable/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" href="~/dist/vendors/datatable/buttons/css/buttons.bootstrap4.min.css" />

<div class="row">
    <div class="col-12  align-self-center">
        <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
            <div class="w-sm-100 mr-auto"><h4 class="mb-0">Hastane Acil Servisleri</h4> <a href="@Url.Action("Index","GenelHastanelerAcilServis")">Genel Hastaneler Acil Servis Modülü</a></div>
            <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                <li class="breadcrumb-item"><a href="#">Hastane Acil Servisleri</a></li>
                <li class="breadcrumb-item active">Anasayfa</li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 mt-3">
        <div class="card">
            <div class="card-header  justify-content-between align-items-center">
                <h4 class="card-title">Başvurular</h4>
            </div>
            @if (User.IsInRole("33"))
            {
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example" class="display table dataTable table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Ad-Soyad</th>
                                    <th>Hasta Ekip No</th>
                                    <th>Kurum</th>
                                    <th>Başvuru Tarihi</th>
                                    <th>Tanı Kodları</th>
                                    <th>Detay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (User.IsInRole("90"))
                                {
                                    foreach (var h in ViewBag.KendiHastalariBasvuru)
                                    {
                                        <tr>
                                            <td>@h.ID</td>
                                            <td>@h.HastaAdi @h.HastaSoyadi</td>
                                            <td>@h.HastaEkipNo</td>
                                            <td>@h.KurumAdi</td>
                                            <td>@h.BasvuruTarihi</td>
                                            <td>
                                                @foreach (var t in h.Tanilar)
                                                {
                                                    <span><b>@t.TaniKodu</b></span>
                                                    <span>@t.Tani</span>
                                                    <br />
                                                }
                                            </td>
                                            @if (User.IsInRole("34"))
                                            {
                                                <td>
                                                    <a class="text-success edit-contact" href="@Url.Action("VakaDetay","GenelHastanelerAcilServis", new { id = h.ID } )" name="Detay" target="_blank"><i class="icon-plus"></i></a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                                else if (User.IsInRole("91"))
                                {
                                    foreach (var h in ViewBag.KurumdakiHastalarBasvuru)
                                    {
                                        <tr>
                                            <td>@h.ID</td>
                                            <td>@h.HastaAdi @h.HastaSoyadi</td>
                                            <td>@h.HastaEkipNo</td>
                                            <td>@h.KurumAdi</td>
                                            <td>@h.BasvuruTarihi</td>
                                            <td>
                                                @foreach (var t in h.Tanilar)
                                                {
                                                    <span><b>@t.TaniKodu</b></span>
                                                    <span>@t.Tani</span>
                                                    <br />
                                                }
                                            </td>
                                            @if (User.IsInRole("34"))
                                            {
                                                <td>
                                                    <a class="text-success edit-contact" href="@Url.Action("VakaDetay","GenelHastanelerAcilServis", new { id = h.ID } )" name="Detay" target="_blank"><i class="icon-plus"></i></a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                                else if (User.IsInRole("92"))
                                {
                                    foreach (var h in ViewBag.TumBasvurular)
                                    {
                                        <tr>
                                            <td>@h.ID</td>
                                            <td>@h.HastaAdi @h.HastaSoyadi</td>
                                            <td>@h.HastaEkipNo</td>
                                            <td>@h.KurumAdi</td>
                                            <td>@h.BasvuruTarihi</td>
                                            <td>
                                                @foreach (var t in h.Tanilar)
                                                {
                                                    <span><b>@t.TaniKodu</b></span>
                                                    <span>@t.Tani</span>
                                                    <br />
                                                }
                                            </td>
                                            @if (User.IsInRole("34"))
                                            {
                                                <td>
                                                    <a class="text-success edit-contact" href="@Url.Action("VakaDetay","GenelHastanelerAcilServis", new { id = h.ID } )" name="Detay" target="_blank"><i class="icon-plus"></i></a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Ad-Soyad</th>
                                    <th>Hasta Ekip No</th>
                                    <th>Kurum</th>
                                    <th>Başvuru Tarihi</th>
                                    <th>Tanı Kodları</th>
                                    <th>Detay</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="card-body">
                    <p>Başvuru bilgisi bulunamadı.</p>
                </div>
            }
        </div>
    </div>
</div>

