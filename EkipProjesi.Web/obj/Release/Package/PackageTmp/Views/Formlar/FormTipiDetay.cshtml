@model EkipProjesi.Core.Formlar.AnketTipleriDTO
@{
    ViewBag.Title = "FormTipiDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>

<div class="row">
    <div class="col-12  align-self-center">
        <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
            <div class="w-sm-100 mr-auto"><h4 class="mb-0">Form Tipi Detay</h4> <a href="@Url.Action("Index", "Formlar")"><p>Formlar</p></a></div>
            <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                <li class="breadcrumb-item"><a href="#">Form Tipi Detay</a></li>
                <li class="breadcrumb-item active">Anasayfa</li>
            </ol>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 mt-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Form Tipi Detay</h5>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            @using (Html.BeginForm("FormTipiDetay", "Formlar", FormMethod.Post, new { @class = "popup-validation", enctype = "multipart/form-data" }))
                            {
                                @Html.HiddenFor(x => x.ID)

                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>Tip Adı</label>
                                        <input name="TipAdi" class="form-control" required type="text" value="@Model.TipAdi" />
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label>Açıklama</label>
                                        <input name="Aciklama" class="form-control" required type="text" value="@Model.Aciklama" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="Status" class="col-sm-3 control-label">Durum</label>
                                        <div class="col-sm-12">
                                            <select name="@Html.NameFor(x=>x.Status)" id="@Html.IdFor(x=>x.Status)" class="form-control" required>
                                                <option value="True">Aktif</option>
                                                <option value="False">Pasif</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-2">
                                    <button type="submit" class="btn btn-primary">Güncelle</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    if ('@ViewBag.Msg' != "") {
        alert("@Html.Encode(ViewBag.Msg)");
    }
    $('#Status option[value="@Model.Status"]').attr('selected', 'selected');
    $('#Status').on('change', function () {
        if (this.value == "True") {
            $('#Status').value("True");
        }
        else if (this.value == "False") {
            $('#Status').value("False");
        }
    });
</script>