    EkipProjesi.Core.IstihdamModulu.IIstihdamIsyeriAdresBilgisi adres = (EkipProjesi.Core.IstihdamModulu.IIstihdamIsyeriAdresBilgisi)ViewBag.AdresBilgisi;
    #endregion
}

