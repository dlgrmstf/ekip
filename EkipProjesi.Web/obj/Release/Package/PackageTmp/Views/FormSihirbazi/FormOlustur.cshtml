
@{
    ViewBag.Title = "Form Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12  align-self-center">
        <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
            <div class="w-sm-100 mr-auto"><h4 class="mb-0">Form Oluştur</h4> <p><a href="@Url.Action("Index","FormSihirbazi")">Form Sihirbazı</a></p></div>
            <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                <li class="breadcrumb-item"><a href="#">Form Oluştur</a></li>
                <li class="breadcrumb-item active">Anasayfa</li>
            </ol>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 mt-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Form Bilgisi</h3>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <form>
                                <h6>Form</h6>
                                <div class="form-row">
                                    <div class="form-group col-md-2">
                                        <label for="formturu">Form Türü</label>
                                        <input type="text" class="form-control" id="formturu">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="formbasligi">Form Başlığı</label>
                                        <input type="text" class="form-control" id="formbasligi">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="aciklama">Açıklama</label>
                                        <input type="text" class="form-control" id="aciklama">
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label for="durum">Durum</label>
                                        <select id="durum" class="form-control">
                                            <option selected>Seçiniz</option>
                                            <option value="1">Aktif</option>
                                            <option value="2">Pasif</option>
                                        </select>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group col-md-3">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>