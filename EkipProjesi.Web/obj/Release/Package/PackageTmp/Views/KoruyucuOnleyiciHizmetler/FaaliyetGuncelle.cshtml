
@{
    ViewBag.Title = "Faaliyet Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12  align-self-center">
        <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
            <div class="w-sm-100 mr-auto"><h4 class="mb-0">Faaliyet Güncelle</h4> <p><a href="@Url.Action("Index","KoruyucuOnleyiciHizmetler")">Koruyucu Önleyici Hizmetler Modülü</a></p></div>
            <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                <li class="breadcrumb-item"><a href="#">Faaliyet Güncelle</a></li>
                <li class="breadcrumb-item active">Anasayfa</li>
            </ol>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 mt-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Faaliyet Bilgileri</h3>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <form>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="faaliyetadi">Faaliyet Adı</label>
                                        <input type="text" class="form-control" id="faaliyetadi">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="faaliyetkonusu">Faaliyet Konusu</label>
                                        <input type="text" class="form-control" id="faaliyetkonusu">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="faaliyetturu">Faaliyet Türü</label>
                                        <select id="faaliyetturu" class="form-control">
                                            <option selected>Seçiniz</option>
                                            <option value="1">Halk Eğitimi</option>
                                            <option value="2">Hizmet İçi Eğitim</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="faaliyettarihi">Faaliyet Tarihi</label>
                                        <input type="date" class="form-control" id="faaliyettarihi">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="faaliyetingerceklestigiyer">Faaliyetin Gerçekleştiği Yer</label>
                                        <input type="text" class="form-control" id="faaliyetingerceklestigiyer">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="faaliyetigerceklestirenkurum">Faaliyeti Gerçekleştiren Kurum</label>
                                        <input type="text" class="form-control" id="faaliyetigerceklestirenkurum">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="faaliyetigerceklestirenkisi">Faaliyeti Gerçekleştiren Kişi</label>
                                        <input type="text" class="form-control" id="faaliyetigerceklestirenkisi">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="faaliyetteulasilankisisayisi">Faaliyette Ulaşılan Kişi Sayısı</label>
                                        <input type="date" class="form-control" id="faaliyetteulasilankisisayisi">
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="faaliyetraporu">Faaliyet Raporu</label>
                                        <textarea type="text" class="form-control" id="faaliyetraporu"></textarea>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group col-md-6">
                                    <button type="submit" class="btn btn-primary">Güncelle</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>